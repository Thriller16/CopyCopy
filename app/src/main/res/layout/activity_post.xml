<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lawrene.falcon.copycopy.PostActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/admin_appBar"/>

    <LinearLayout
        android:id="@+id/spinnerLayout"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_margin="1dp"
            android:inputType="textCapCharacters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter the post title"
            android:padding="5dp"
            android:id="@+id/admin_post_ttittle"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sch_txtView"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select School"/>

            <Spinner
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adminschoolspinner">
            </Spinner>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fac_txtView"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Faculty"/>

            <Spinner
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adminfacultyspinner">
            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dept_txtView"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Department"/>

            <Spinner
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/admindept_spinner">
            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lvl_txtView"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Level"/>

            <Spinner
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adminlevel_spinner">
            </Spinner>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageOne"
                android:layout_width="0dp"
                android:layout_height="100dp" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageTwo"
                android:layout_width="0dp"
                android:layout_height="100dp" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageThree"
                android:layout_width="0dp"
                android:layout_height="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageFour"
                android:layout_width="0dp"
                android:layout_height="100dp" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageFive"
                android:layout_width="0dp"
                android:layout_height="100dp" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageSix"
                android:layout_width="0dp"
                android:layout_height="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:id="@+id/admin_select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select file"/>


            <Button
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:id="@+id/adminPostBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
